<UserControl x:Class="App_Automatize_Backery.View.UserControls_Pages_.General_WorkerPages.SupplyRequestsWarehousesRM"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:App_Automatize_Backery.View.UserControls_Pages_.General_WorkerPages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <StackPanel Orientation="Vertical" Margin="20">
            <TextBlock HorizontalAlignment="Left" Text="Сырье в заявке" FontSize="20" FontWeight="Bold" Margin="10,5,0,10"/>
            <Button Content="Добавить сырье в заявку" 
                    Command="{Binding AddRawMaterialToRequestCommand}" 
                    Width="200" 
                    Margin="0 -35 0 10" 
                    HorizontalAlignment="Center"
                    IsEnabled="{Binding CanAddRawMaterial}"
                    Visibility="{Binding DataContext.ManagerVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

            <DataGrid ItemsSource="{Binding SupplyRequestsRawMaterials}" 
          SelectedItem="{Binding SelectedRawMaterial}" 
          AutoGenerateColumns="False" 
          IsReadOnly="True"
          ScrollViewer.VerticalScrollBarVisibility="Auto" Height="270">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Склад" Binding="{Binding Warehouse.WarehouseName}" Width="Auto"/>
                    <DataGridTextColumn Header="Сырье" Binding="{Binding RawMaterial.RawMaterialName}" Width="Auto"/>
                    <DataGridTextColumn Header="Количество" Binding="{Binding CountRawMaterial}" Width="Auto"/>
                    <DataGridTextColumn Header="Стоимость" Binding="{Binding SupplyCoastToMaterial,  StringFormat={}{0} руб.}" Width="Auto"/>

                    <!-- Колонка с кнопками действий -->
                    <DataGridTemplateColumn Header="Действия">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                        Visibility="{Binding DataContext.ManagerVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                    <Button Content="✎" 
                        Command="{Binding DataContext.EditRawMaterialCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                        CommandParameter="{Binding}" 
                        ToolTip="Редактировать" 
                        Margin="5" 
                        IsEnabled="{Binding DataContext.CanEditRawMaterial, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                    <Button Content="🗑" 
                        Command="{Binding DataContext.DeleteRawMaterialCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                        CommandParameter="{Binding}" 
                        ToolTip="Удалить" 
                        Margin="5" 
                        IsEnabled="{Binding DataContext.CanDeleteRawMaterial, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
