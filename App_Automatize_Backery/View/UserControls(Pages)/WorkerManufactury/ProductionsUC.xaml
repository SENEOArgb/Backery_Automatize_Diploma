<UserControl x:Class="App_Automatize_Backery.View.UserControls_Pages_.WorkerManufactury.ProductionsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:App_Automatize_Backery.View.UserControls_Pages_.WorkerManufactury" xmlns:productionsvm="clr-namespace:App_Automatize_Backery.ViewModels.ProductionsVM" d:DataContext="{d:DesignInstance Type=productionsvm:ProductionViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="260" />
            <RowDefinition Height="170" />
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопка создания -->
        <StackPanel Orientation="Horizontal" Margin="10,10,10,10">
            <TextBlock Text="Список производств" FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="Создать производство"
                    Command="{Binding CreateProductionCommand}"
                    Margin="20,0,0,0" />
        </StackPanel>

        <!-- Список производств -->
        <DataGrid Grid.Row="1" Height="280" VerticalAlignment="Center"
                  ItemsSource="{Binding Productions}"
                  SelectedItem="{Binding SelectedProduction}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата начала" Binding="{Binding DateTimeStart, StringFormat='dd.MM.yyyy HH:mm'}" Width="250" />
                <DataGridTextColumn Header="Дата окончания" Binding="{Binding DateTimeEnd, StringFormat='dd.MM.yyyy HH:mm'}" Width="250" />

                <!-- Просмотр деталей -->
                <DataGridTemplateColumn Header="Детали">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Просмотреть"
                    Command="{Binding DataContext.ViewProductionDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    CommandParameter="{Binding}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Удаление -->
                <DataGridTemplateColumn Header="Отменить">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Отменить"
                                    Command="{Binding DataContext.DeleteProductionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Динамическое отображение деталей -->
        <ContentControl Height="200" Grid.Row="1" Content="{Binding CurrentDetailsView}" VerticalAlignment="Top" Margin="0,230,0,0" Grid.RowSpan="2" />
    </Grid>
</UserControl>
