<UserControl x:Class="App_Automatize_Backery.View.SupportControls.ProductsWarehouseUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:App_Automatize_Backery.View.SupportControls" xmlns:supportviewmodel="clr-namespace:App_Automatize_Backery.ViewModels.SupportViewModel" d:DataContext="{d:DesignInstance Type=supportviewmodel:PWarehouseViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid ItemsSource="{Binding WarehouseItems}"
                  AutoGenerateColumns="False"
                  Margin="10"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID Продукта:" Binding="{Binding ProductId}"/>
                <DataGridTextColumn Header="Название:" Binding="{Binding Product.ProductName}"/>
                <DataGridTextColumn Header="Количество,шт:" Binding="{Binding RawMaterialCount}"/>
                <DataGridTextColumn Header="Произведено:" Binding="{Binding DateSupplyOrProduction, StringFormat='dd.MM.yyyy HH:mm'}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
