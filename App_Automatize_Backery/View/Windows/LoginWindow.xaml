<Window x:Class="App_Automatize_Backery.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_Automatize_Backery.View" xmlns:viewmodels="clr-namespace:App_Automatize_Backery.ViewModels"
        mc:Ignorable="d"
        Title="Авторизация" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f5f5f5">
    <Grid>
        <Border Margin="20"
            CornerRadius="15"
            Background="White"
            Padding="30">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
                <!-- Заголовок -->
                <TextBlock Text="Вход в систему"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#2c3e50"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 30" />

                <!-- Логин -->
                <TextBlock Text="Логин"
                       Margin="0 0 0 5"
                       FontWeight="SemiBold"
                       Foreground="#34495e"/>
                <TextBox Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                     Height="35"
                     Margin="0 0 0 20"
                     Padding="10 0 0 0"
                     FontSize="14"
                     Background="#ecf0f1"
                     BorderBrush="#bdc3c7"
                     BorderThickness="1"
                     />

                <!-- Пароль -->
                <TextBlock Text="Пароль"
                       Margin="0 0 0 5"
                       FontWeight="SemiBold"
                       Foreground="#34495e"/>
                <PasswordBox Name="PasswordBox"
                         PasswordChanged="PasswordBox_PasswordChanged"
                         Height="35"
                         Margin="0 0 0 30"
                         Padding="10 0 0 0"
                         FontSize="14"
                         Background="#ecf0f1"
                         BorderBrush="#bdc3c7"
                         BorderThickness="1"
                         />

                <!-- Кнопка Войти -->
                <Button Content="Войти"
                    Height="40"
                    Background="#3498db"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="16"
                    BorderBrush="#2980b9"
                    BorderThickness="1"
                    Command="{Binding LoginCommand}"
                    Cursor="Hand"
                    />
            </StackPanel>
        </Border>
    </Grid>
</Window>
