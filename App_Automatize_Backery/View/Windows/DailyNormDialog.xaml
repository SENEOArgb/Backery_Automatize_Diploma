<Window x:Class="App_Automatize_Backery.View.Windows.DailyNormDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_Automatize_Backery.View.Windows"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="DailyNormDialog" Height="200" Width="300">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Введите дневную норму:" FontSize="16" Margin="0,0,0,10"/>
            <TextBox x:Name="NormInput" Width="200" Height="30" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <Button Content="Установить" Width="100" Height="30" HorizontalAlignment="Center" Click="OnSetNormClick"/>
        </StackPanel>
    </Grid>
</Window>
